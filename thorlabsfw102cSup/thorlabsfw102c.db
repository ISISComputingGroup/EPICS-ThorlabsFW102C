# Controller Version
#
#% archiver 10 Monitor
#% controldesk Controller Version readback
record(stringin, "$(P)ID")
{
    field(DESC, "Controller Version")
    field(DTYP, "stream")
    field(INP,  "@thorlabsfw102c.proto getId() $(PORT)")
    field(SDIS, "$(P)DISABLE")
    field(SCAN, "10 second")
}

