record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}


#% archiver 10 Monitor
#% controldesk Controller Version readback
record(stringin, "$(P)ID")
{
    field(DESC, "Controller Version")
    field(DTYP, "stream")
    field(INP,  "@thorlabsfw102c.proto getString(*idn, 199) $(PORT)")
    field(SDIS, "$(P)DISABLE")
    field(PINI, "YES")
    field(SCAN, "10 second")
}

# set/get current position

record(mbbo, "$(P)POSITION:SP")
{
    field(DESC, "Set Filter position")
    field(DTYP, "stream")
    field(OUT,  "@thorlabsfw102c.proto setD(pos) $(PORT)")
    #field(FLNK, "$(P)POSITION")
    field(ZRVL, "1")
    field(ZRST, "Filter 1")
    field(ONVL, "2")
    field(ONST, "Filter 2")
    field(TWVL, "3")
    field(TWST, "Filter 3")
    field(THVL, "4")
    field(THST, "Filter 4")
    field(FRVL, "5")
    field(FRST, "Filter 5")
    field(FVVL, "6")
    field(FVST, "Filter 6")
    field(SDIS, "$(P)DISABLE")
    field(UDFS, "NO_ALARM")
    info(archive, "VAL")
}

